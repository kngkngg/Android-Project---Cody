<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:layout_marginBottom="50dp">

    <android.support.v7.widget.CardView
        android:id="@+id/rec_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="20dp">

            <RelativeLayout
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_height="400dp"
                android:layout_width="match_parent">

                <ImageView
                    android:id="@+id/rec_imageView2"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="2dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    app:srcCompat="@drawable/example_top" />

                <ImageView
                    android:id="@+id/rec_imageView3"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_alignStart="@+id/rec_imageView2"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="137dp"
                    android:paddingLeft="5dp"
                    app:srcCompat="@drawable/example_bottom" />

                <ImageView
                    android:id="@+id/rec_imageView4"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_alignStart="@+id/rec_imageView2"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="11dp"
                    android:paddingLeft="5dp"
                    app:srcCompat="@drawable/example_shoes" />

                <ImageView
                    android:id="@+id/rec_imageView5"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="3dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:layout_toEndOf="@+id/rec_imageView2"
                    app:srcCompat="@drawable/blackcap" />

                <ImageView
                    android:id="@+id/rec_imageView6"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_alignStart="@+id/rec_imageView5"
                    android:layout_alignTop="@+id/rec_imageView3"
                    android:layout_alignEnd="@+id/rec_imageView5"
                    android:layout_marginStart="1dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginEnd="-1dp"
                    android:paddingRight="5dp"
                    android:layout_marginRight="0dp"
                    app:srcCompat="@drawable/example_bag" />


                <ImageView
                    android:id="@+id/rec_imageView7"
                    android:layout_width="115dp"
                    android:layout_height="113dp"
                    android:layout_alignStart="@+id/rec_imageView5"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginBottom="13dp"
                    android:paddingRight="5dp"
                    app:srcCompat="@drawable/example_shoes" />

            </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>